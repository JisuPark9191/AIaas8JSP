<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.prac.myapp.member.dao.IClientRepository">
    <resultMap id="getClient" type="com.prac.myapp.addr.model.MemberVO">
        <result property="id" column="ID"/>
        <result property="pw" column="PW"/>
        <result property="name" column="NAME"/>
        <result property="phone" column="PHONE"/>
        <result property="email" column="EMAIL"/>
        <result property="address" column="ADDRESS"/>
        <result property="rDate" column="RDATE"/>
        <result property="memo" column="MEMO"/>
    </resultMap>
    
    <select id="getClientCount" resultType="int">
    	SELECT COUNT(*) FROM CLIENT
    </select>
    
    <select id="getClientList" parameterType="map" resultType="com.prac.myapp.addr.model.MemberVO">
        SELECT * FROM CLIENT
        <choose>
            <when test="value == 'date'">
                ORDER BY ID
            </when>
            <when test="value == 'name'">
                ORDER BY NAME
            </when>
            <when test="value == 'rDate'">
                ORDER BY RDATE
            </when>
        </choose>
        <if test="orderby== 'ascend'"> ASC </if>
        <if test="orderby== 'descend'"> DESC </if>
    </select>
    
    <select id="getClientNameList" parameterType="string" resultType="com.prac.myapp.addr.model.MemberVO">
        SELECT * FROM CLIENT WHERE NAME = #{name}
    </select>
    
    <select id="getClientInfo" parameterType="string" resultType="com.prac.myapp.addr.model.MemberVO">
        SELECT * FROM CLIENT WHERE ID = #{id}
    </select>
    
    <update id="updateClient" parameterType="com.prac.myapp.addr.model.MemberVO">
        UPDATE CLIENT
        <set>
            NAME = #{name},
            PHONE = #{phone},
            EMAIL = #{email},
            ADDRESS = #{address},
            RDATE = #{rDate},
            MEMO = #{memo}
        </set>
        WHERE ID = #{id}
    </update>
    
    <insert id="insertClient" parameterType="com.prac.myapp.addr.model.MemberVO">
        INSERT INTO CLIENT (ID, PW, NAME, PHONE, EMAIL, ADDRESS, RDATE, MEMO) 
        VALUES (#{id}, #{pw}, #{name}, #{phone}, #{email}, #{address}, SYSDATE, #{memo})
    </insert>
    
    <delete id="deleteClient" parameterType="map">
        DELETE FROM CLIENT WHERE ID = #{id} AND PW = #{pw}
    </delete>
</mapper>